<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="pl.boryskaczmarek.unitconverter.ChoiceViewController"
      prefHeight="400.0" prefWidth="600.0">
    <padding>
        <Insets bottom="30.0" left="20.0" right="20.0" top="30.0"/>
    </padding>

    <Text text="Superior Unit Converter" />

    <Label text="Measure Type" />
    <ComboBox fx:id="measureComboBox" promptText="Choose Measure Type" />

    <Button text="Next" onAction="#onNextButtonClick" />
</VBox>
